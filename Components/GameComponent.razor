@inject IGameService GameService

<div class="row my-3 align-items-center justify-content-between">
    <div class="col-auto px-0">
        <div class="row">
            <div class="col">
                <span class="font-weight-bold">Best:</span>
                <span>@GameService.BestScore</span>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <span class="font-weight-bold">Score:</span>
                <span class="mr-1">@(Game?.Score ?? 0)</span>
                @if (Game is not null)
                {
                    <span class="font-weight-bolder">
                        @if (Game.Over)
                        {
                            @:(Over)
                        }
                        else if (Game.Won)
                        {
                            @:(Won)
                        }
                    </span>
                }
            </div>
        </div>
    </div>
    <div class="col-auto px-0">
        <button class="btn btn-game" @onclick="NewGameClick">New Game</button>
    </div>
</div>
<div class="row justify-content-center">
    <GridComponent Grid="@Game?.Grid"/>
</div>
<div class="row my-3">
    <div class="col">
        <div class="row justify-content-center">
            <div class="col-auto">
                <button class="btn btn-game" @onclick="async () => await GameService.MoveAsync(Direction.Up)">
                    <i class="oi oi-arrow-thick-top"></i>
                </button>
            </div>
        </div>
        <div class="row justify-content-center my-2">
            <div class="col-auto mr-3">
                <button class="btn btn-game" @onclick="async () => await GameService.MoveAsync(Direction.Left)">
                    <i class="oi oi-arrow-thick-left"></i>
                </button>
            </div>
            <div class="col-auto ml-3">
                <button class="btn btn-game" @onclick="async () => await GameService.MoveAsync(Direction.Right)">
                    <i class="oi oi-arrow-thick-right"></i>
                </button>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-auto">
                <button class="btn btn-game" @onclick="async () => await GameService.MoveAsync(Direction.Down)">
                    <i class="oi oi-arrow-thick-bottom"></i>
                </button>
            </div>
        </div>
    </div>
</div>

@code {
#nullable enable

    [Parameter]
    public EventCallback NewGameClick { get; set; }

    [Parameter]
    public Game? Game { get; set; }

}